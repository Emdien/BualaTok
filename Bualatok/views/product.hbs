                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse align-items-center" id="main-navigation">
                <div class="container">
                    <!-- Action temporal: se tiene que procesar la busqueda adecuadamente -->
                    <form class="col-auto col-lg-12 mb-0 mb-lg-0 me-lg-3" action="/search">
                        <input type="search" class="form-control form-control-dark d-none d-lg-flex d-xl-flex  rounded-input" placeholder="Search..." id="psearch" name="nombre">
                    </form>
                </div>
                
                <ul class="navbar-nav col-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/search">Buscar productos</a>
                    </li>
                    <li class="nav-item">
                        <div class="dropdown">
                            <a href="" class="nav-link dropdown-toggle" id="dropdownProductButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Productos
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownProductButton">
                                <a class="dropdown-item" href="/newitem">Registrar producto</a>
                                <a class="dropdown-item" href="/itemlist">Mis productos</a>
                            </div>
                        </div>
                        
                    </li>
                </ul>
                
            </div>
            <div class="flex-shrink-0 dropdown mr-4 ">
                
                <a href="#" class="d-block text-dark link-dark text-decoration-none dropdown-toggle pt-1" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    {{username}}
                    <img src="images/fg-avatar-anonymous-user-retina.png" alt="user" width="32" height="32" class="rounded-circle">
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                  <a class="dropdown-item" href="/settings">Opciones</a>
                  <a class="dropdown-item" href="/logout">Logout</a>
                </div>
              </div>
        </nav>



        <div class="container border border-dark rounded bg-light mt-5 pt-3 mb-5">
            <h2 class="text-center font-weight-bold">Registrar Producto</h2>
            <div class="container">
                <form action="" method="POST" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="form-group col-12 mb-2">
                            <label for="inputPNombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="inputPNombre" name="nombre">
                        </div>
                        <div class="form-group col-12 mb-2">
                            <label for="textPDesc" class="form-label">Descripción</label>
                            <textarea name="descripcion" id="textPDesc" rows="5" class="form-control" name="descripcion"></textarea>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-12 col-sm-6 mb-2">
                            <div class="form-row">
                                <div class="form-group col-12 col-sm-10 mb-2">
                                    <label for="inputPCategoria" class="form-label">Categoria</label>
                                    <select name="categoria" id="inputPCategoria" class="form-control" name="categoria">
                                        <option selected>Categorias</option>
                                        <option value="1">...</option>
                                        <option value="2">...</option>
                                        <option value="3">...</option>
                                        <option value="4">...</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-12 col-sm-10 mb-2">
                                    <label for="inputPPrecio" class="form-label">Precio</label>
                                    <input type="number" class="form-control" id="inputPPrecio" name="precio">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-12 col-sm-10 mb-2">
                                    <fieldset>
                                        <label class="form-label">Estado del producto</label>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="estado" id="estadoNuevo" value="nuevo" checked>
                                            <label class="form-check-label" for="estadoNuevo">
                                                Nuevo
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="estado" id="estadoBueno" value="bueno">
                                            <label class="form-check-label" for="estadoBueno">
                                                Bueno
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="estado" id="estadoMalo" value="malo">
                                            <label class="form-check-label" for="estadoMalo">
                                                Malo
                                            </label>
                                        </div>
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-12 col-sm-6 mb-4">
                            <label for="">Imagen</label>
                            <input type="file" class="form-control-file" name="file" id="file" accept="image/*">
                            <img src="images/placeholder-image.png" class="img-fluid border product-register-img mt-2" id="preview" name="preview">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-12 col-sm-4 offset-sm-4 mb-4">
                            <button type="submit" name="" value="" class="btn btn-primary btn-block">Registrar producto</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>



